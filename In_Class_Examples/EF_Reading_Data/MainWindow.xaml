<Window x:Class="EF_Reading_Data.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EF_Reading_Data"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://th.bing.com/th/id/OIP.C6sKuPFGt8T-_RIacHrlYQHaEL?w=314&amp;h=180&amp;c=7&amp;r=0&amp;o=7&amp;dpr=1.3&amp;pid=1.7&amp;rm=3"/>
    </Window.Background>
    <Grid>
        <ListBox x:Name="lstAway" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#99FFFFFF" Margin="400,0,0,0"/>
        <ListBox x:Name="lstHome" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#99FFFFFF" Margin="0,0,400,0"/>

    </Grid>
</Window>
