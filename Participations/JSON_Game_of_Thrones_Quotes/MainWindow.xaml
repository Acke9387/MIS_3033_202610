<Window x:Class="JSON_Game_of_Thrones_Quotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Game_of_Thrones_Quotes"
        mc:Ignorable="d"
        Title="Game of Thrones Quotes" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://media.gq-magazine.co.uk/photos/5d13a719976fa3b60ff3ad46/16:9/w_2560%2Cc_limit/20160602_ep609_publicity_still_00400095499.jpg"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="tbQuote" HorizontalAlignment="Left" Margin="400,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="101" Width="343" Background="#999D0404" Foreground="White" TextAlignment="Center"/>
        <ListBox x:Name="lstQuotes" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,478,76" Opacity="0.5"/>
        <Button x:Name="btnSave" HorizontalAlignment="Left" Margin="117,361,0,0" VerticalAlignment="Top" Height="51" Width="52" Background="#FFDDDDDD" Click="btnSave_Click">
            <Image Source="https://icons.veryicon.com/png/o/miscellaneous/utility/save-44.png" Stretch="Uniform"/>
        </Button>
        <Button x:Name="btnRefresh" HorizontalAlignment="Left" Margin="517,349,0,0" VerticalAlignment="Top" Height="63" Width="70" Click="btnRefresh_Click">
            <Image Source="https://cdn1.iconfinder.com/data/icons/vibrancie-action/30/action_011-sync-fetch-arrow-update-512.png" Stretch="Uniform" />
        </Button>

    </Grid>
</Window>
