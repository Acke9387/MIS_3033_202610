<Window x:Class="Classes_And_Files.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classes_And_Files"
        mc:Ignorable="d"
        Title="Toyland" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTRrw752FTJ26mlh2eTu6OMc_pP44BkH3LDTA&amp;s"/>
    </Window.Background>
    <Grid>
        <Label Content="Toyland" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36"/>
        <ListBox x:Name="lstToys" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="541,0,0,0"/>
        <Label Content="Manufacturer:" HorizontalAlignment="Left" Margin="126,99,0,0" VerticalAlignment="Top" Background="#CCFCFCFC"/>
        <TextBox x:Name="txtManufacturer" HorizontalAlignment="Left" Margin="236,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="126,137,0,0" VerticalAlignment="Top" Background="#CCFCFCFC"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="236,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Image URL:" HorizontalAlignment="Left" Margin="126,172,0,0" VerticalAlignment="Top" Background="#CCFCFCFC"/>
        <TextBox x:Name="txtImageUrl" HorizontalAlignment="Left" Margin="236,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAddToy" Content="Add Toy" HorizontalAlignment="Left" Margin="252,217,0,0" VerticalAlignment="Top" Height="32" Width="67" IsDefault="True"/>
        <Image x:Name="imgToy" HorizontalAlignment="Left" Height="147" Margin="366,82,0,0" VerticalAlignment="Top" Width="166"/>

    </Grid>
</Window>
